{
  "cli": {
    "version": ">= 7.0.0"
  },
  "build": {
    "development": {
      "distribution": "internal",
      "developmentClient": true,
      "ios": {
        "simulator": true
      }
    },
    "development-device": {
      "developmentClient": true,
      "distribution": "internal"
    },
    "preview": {
      "distribution": "internal"
    },
    "production": {
      "ios": {
        "buildType": "release",
        "distribution": "internal",
        "releaseChannel": "production",
        "autoIncrement": true
      },
      "android": {
        "buildType": "app-bundle",
        "releaseChannel": "production",
        "autoIncrement": true
      }
    }
  },
  "submit": {
    "production": {}
  }
}